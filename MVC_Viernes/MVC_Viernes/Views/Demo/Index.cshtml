@model IEnumerable <MVC_Viernes.Models.Libro>
@{

    ViewBag.Title = "Index";
}

<h2>Index</h2>@ViewBag.Mensaje
@{ string titulo = "Página princial";
    int dia = DateTime.Now.Day;
    int mes = DateTime.Now.Month;
    int anio = DateTime.Now.Year;
    string cadena;
    if (dia > 15)
    {
        cadena = "Estamos en la segunda parte del mes";

    }
    else
    {
        cadena = "Estamos en la primera parte del mes";
    }
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width-device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <h1>@titulo</h1>
        <p>Fecha:@dia/@mes/@anio</p>
        <p>@cadena</p>
       
        <ul>
            @foreach (var libro in Model)
            {
                <li>@libro.Titulo (@libro.TipoLibro)</li>
            }
    </ul>
        </div>
</body>
</html>
